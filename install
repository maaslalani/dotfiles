#!/bin/sh

git clone https://github.com/maaslalani/_.git ~/_
cd ~/_
mkdir -p ~/.config/nix && echo "sandbox = false" > ~/.config/nix/nix.conf
nix-shell -p nixUnstable --command "nix build --out-link ~/.config/nixpkgs/result --impure --experimental-features 'nix-command flakes' '.#spin'"
~/.config/nixpkgs/result/activate
